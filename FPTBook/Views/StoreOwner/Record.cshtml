@{
    ViewData["Title"] = "ManageBook";
    Layout = "~/Views/Shared/_LayoutStoreOwner.cshtml";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/FPTBook.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.6.0/remixicon.css" />
    <script src="https://kit.fontawesome.com/63149990bf.js" crossorigin="anonymous"></script>
    <link rel="shortcut icon"
          href="assets/img/favicon.png"
          type="image/x-icon" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/3.5.0/remixicon.css" />
    <link rel="stylesheet" href="~/css/swiper-bundle.min.css" />

    <link rel="stylesheet" href="~/css/site.css" />

    <title>Responsive book website</title>
</head>
<body>
    <div class="manage_book-container">
        <siline class="siline-main">

            <div class="navbar-item-A1">

                <ul class="navbar-nav">
                    <li class="nav-item-main">
                        <p class="">ANALYIS</p>
                    </li>

                    <li class="nav-item-abc1">
                        <a class=" active-main" asp-area="" asp-controller="StoreOwner" asp-action="Dashboard">
                            <span class="nav-link-text">
                                <i class="fa-solid fa-magnifying-glass-chart"></i>
                                <linkk> Table Analyis</linkk>
                            </span>
                        </a>
                    </li>

                    <li class="nav-item-main">
                        <p class="">MANAGE</p>
                    </li>

                    <li class="nav-item-abc1">
                        <a class="active-main" asp-area="" asp-controller="StoreOwner" asp-action="ManageBook">
                            <span class="nav-link-text ">
                                <i class="fa-solid fa-user"></i>
                                <linkk> Book</linkk>
                            </span>
                        </a>
                    </li>


                    <li class="nav-item-abc1">
                        <a class=" active-main" asp-area="" asp-controller="StoreOwner" asp-action="Record">
                            <span class="nav-link-text ">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <linkk> Record</linkk>
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </siline>
        <div class="Manageuser-body-main">
            <div class="table-content-01">
                <div class="information-store-owner" style="
            max-height: 80vh;
            overflow-y: auto;">
                    <div class="title-owner">

                        <div>
                            <p class="store-owner-for">
                                Record
                            </p>
                        </div>
                    </div>
                    <table class="tabale-store-owner">
                        <tr class="table-tr-store-main">
                            <th class="th-table-store">Name</th>
                            <th class="th-table-store">Image </th>
                            <th class="th-table-store">Book </th>
                            <th class="th-table-store">Quantity</th>
                            <th class="th-table-store">Total amount</th>
                            <th class="th-table-store">Action</th>
                        </tr>
                        <tr class="table-tr-store" data-href='url://https://next-comic-one.vercel.app/'>                            
                            <td class="td-table-store">Lê Nguyễn Quốc Khánh</td>
                            <td class="td-table-store">
                                <img id="avatar" class="image-user-store-owner" width="60" height="60" src="~/images/book-3-1.png" />
                            </td>
                            <td class="td-table-store">999 Lá Thư Gửi Cho Chính Mình</td>
                            <td class="td-table-store">1</td>
                            <td class="td-table-store">$15</td>
                            <td class="td-table-store">
                                <button class="btn-record-delete button" type="SUNMIT"><i class="fa-solid fa-trash-can"></i></button>
                            </td>
                        </tr>
                        <tr class="table-tr-store" data-href='url://https://next-comic-one.vercel.app/'>
                            <td class="td-table-store">Vũ Tiến Phát</td>
                            <td class="td-table-store">
                                <img id="avatar" class="image-user-store-owner" width="60" height="60" src="~/images/book-2-1.png" />
                            </td>
                            <td class="td-table-store">Kinh Doanh Thời Trang</td>
                            <td class="td-table-store">1</td>
                            <td class="td-table-store">$15</td>
                            <td class="td-table-store">
                                <button class="btn-record-delete button" type="SUNMIT"><i class="fa-solid fa-trash-can"></i></button>
                            </td>
                        </tr>
                        <tr class="table-tr-store" data-href='url://https://next-comic-one.vercel.app/'>
                            <td class="td-table-store">Trịnh Ánh Dương</td>
                            <td class="td-table-store">
                                <img id="avatar" class="image-user-store-owner" width="60" height="60" src="~/images/book-14-1.png" />
                            </td>
                            <td class="td-table-store">Ông Già Và Biển Cả</td>
                            <td class="td-table-store">1</td>
                            <td class="td-table-store">$12</td>
                            <td class="td-table-store">
                                <button class="btn-record-delete button" type="SUNMIT"><i class="fa-solid fa-trash-can"></i></button>
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>


    <script src="~/js/swiper-bundle.min.js"></script>
    <script src="~/js/scrollreveal.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
